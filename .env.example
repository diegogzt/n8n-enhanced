# n8n Enhanced Edition - Environment Variables for Coolify
# Copy this file to .env and configure your values

# Domain Configuration (REQUIRED for Coolify)
N8N_HOST=n8n.dgtovar.dev
N8N_PROTOCOL=https
WEBHOOK_URL=https://n8n.dgtovar.dev/

# Database Configuration
POSTGRES_USER=n8n
POSTGRES_PASSWORD=CHANGE_ME_SECURE_PASSWORD
POSTGRES_DB=n8n

# n8n Encryption Key (IMPORTANT: Generate a secure key)
# Generate with: openssl rand -base64 32
N8N_ENCRYPTION_KEY=CHANGE_ME_ENCRYPTION_KEY_MIN_24_CHARS

# Timezone
GENERIC_TIMEZONE=America/New_York
TZ=America/New_York

# Security
N8N_ENFORCE_SETTINGS_FILE_PERMISSIONS=true
N8N_BLOCK_ENV_ACCESS_IN_NODE=false

# Optional: Task Runners
N8N_RUNNERS_ENABLED=true

# Optional: External Secrets (uncomment to enable)
# N8N_EXTERNAL_SECRETS_VAULT_URL=https://vault.example.com
# N8N_EXTERNAL_SECRETS_VAULT_TOKEN=hvs.xxxxx
# N8N_EXTERNAL_SECRETS_VAULT_NAMESPACE=admin

# Optional: OIDC/SSO (uncomment to enable)
# N8N_SSO_OIDC_ENABLED=true
# N8N_SSO_OIDC_CLIENT_ID=your-client-id
# N8N_SSO_OIDC_CLIENT_SECRET=your-client-secret
# N8N_SSO_OIDC_ISSUER=https://accounts.google.com
# N8N_SSO_OIDC_SCOPE=openid email profile

# Optional: Log Streaming to Datadog (uncomment to enable)
# N8N_LOG_STREAM_DATADOG_API_KEY=your-api-key
# N8N_LOG_STREAM_DATADOG_SITE=datadoghq.com
